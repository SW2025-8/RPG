<h1>ようこそ！</h1>

<p>ログインに成功しました。</p>

<hr>

<h2>現在のステータス</h2>

<p><strong>ユーザー：</strong> <%= current_user.email %></p>
<p><strong>レベル：</strong> <%= current_user.level %></p>
<p><strong>経験値：</strong> <%= current_user.exp %> / 100</p>

<hr>

<table border="1" cellpadding="8">
  <tr>
    <th>タイトル</th>
    <th>経験値</th>
    <th>操作</th>
    <th>完了</th>
  </tr>
<% @quests.each do |quest| %>
    <tr>
      <td><%= quest.title %></td>
      <td><%= quest.exp_reward %></td>
      <td>
        <%= link_to "詳細", quest_path(quest) %> |
        <%= link_to "編集", edit_quest_path(quest) %> |
        <%= link_to "削除", quest_path(quest),
              method: :delete,
              data: { confirm: "本当に削除しますか？" } %>
      </td>
      <td>
        <%= button_to "完了",
              complete_quest_path(quest),
              method: :patch,
              form: { data: { turbo_confirm: "このクエストを完了しますか？" } } %>
      </td>
    </tr>
  <% end %>
</table>
<p>
  <%= link_to "クエスト追加", quests_path %>
</p>

<p>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
</p>
