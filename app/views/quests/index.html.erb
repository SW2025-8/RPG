<div class="container mt-4">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>クエスト一覧</h1>
    <a href="<%= new_quest_path %>" class="btn btn-primary">新規クエスト作成</a>
  </div>

  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>タイトル</th>
        <th>経験値</th>
        <th>操作</th>
        <th>完了</th>
      </tr>
    </thead>

    <tbody>
      <% @quests.each do |quest| %>
        <tr>
          <td><%= quest.title %></td>
          <td><%= quest.exp_reward %></td>
          <td>
            <a href="<%= quest_path(quest) %>" class="btn btn-sm btn-info text-white">詳細</a>
            <a href="<%= edit_quest_path(quest) %>" class="btn btn-sm btn-warning">編集</a>

            <%= button_to "削除", quest_path(quest),
                method: :delete,
                data: { turbo_confirm: "削除しますか？" },
                class: "btn btn-sm btn-danger d-inline-block" %>
          </td>

          <td>
            <%= button_to "完了",
                complete_quest_path(quest),
                method: :patch,
                class: "btn btn-sm btn-success",
                form: { data: { turbo_confirm: "このクエストを完了しますか？" } } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <a href="<%= root_path %>" class="btn btn-outline-secondary">ホームに戻る</a>
</div>
