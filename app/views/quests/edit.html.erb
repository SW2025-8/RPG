<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="card shadow-sm">
        <div class="card-body">

          <h1 class="card-title mb-4">クエスト編集</h1>

          <%= form_with(model: @quest, local: true) do |f| %>

            <!-- タイトル -->
            <div class="mb-3">
              <%= f.label :title, "タイトル", class: "form-label" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>

            <!-- 説明文 -->
            <div class="mb-3">
              <%= f.label :description, "説明文", class: "form-label" %>
              <%= f.text_area :description, rows: 5, class: "form-control" %>
            </div>

            <!-- 獲得経験値（表示のみ・編集不可） -->
            <div class="mb-4">
              <%= f.label :exp_reward, "獲得経験値", class: "form-label" %>
              <input type="text"
                     class="form-control"
                     value="<%= @quest.exp_reward %>"
                     readonly>
              <small class="text-muted">
                ※ 獲得経験値は難易度により自動で決まります
              </small>
            </div>

            <!-- ボタン：右下寄せ -->
            <div class="d-flex justify-content-end gap-2 mt-4">
              <a href="<%= quests_path %>" class="btn btn-secondary">
                一覧へ戻る
              </a>
              <%= f.submit "更新する", class: "btn btn-warning" %>
            </div>

          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>
