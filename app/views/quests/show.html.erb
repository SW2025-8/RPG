<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="card shadow-sm">
        <div class="card-body">

          <h1 class="card-title mb-3">クエスト詳細</h1>

          <p><strong>タイトル：</strong> <%= @quest.title %></p>

          <p><strong>説明：</strong><br>
            <%= simple_format(@quest.description) %>
          </p>

          <p><strong>獲得経験値：</strong> <%= @quest.exp_reward %></p>

          <hr>

          <div class="d-flex gap-2">
            <a href="<%= edit_quest_path(@quest) %>" class="btn btn-warning">編集</a>
            <a href="<%= quests_path %>" class="btn btn-secondary">一覧へ戻る</a>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>
