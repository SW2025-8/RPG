<div class="card mt-4">
  <div class="card-body text-center">

    <% if current_user.avatar_type.present? %>
      <img src="<%= asset_path(current_user.avatar_image) %>"
           class="img-fluid"
           style="max-width: 150px;">
    <% else %>
      <p>アバター未設定</p>
    <% end %>

    <%= link_to "アバター変更", avatar_path, class: "btn btn-warning mt-3" %>

  </div>
</div>
